{
  "name": "fusor-hub",
  "version": "0.0.1-alfa",
  "description": "Fusor Hub, part of Fusor ecosystem",
  "copyright": "Giedrius Lukosevicius",
  "author": {
    "name": "Giedrius Lukosevicius",
    "email": "fusor@nanobitas.lt"
  },
  "keywords": [
    "IOT",
    "Smart House",
    "Hub",
    "Server"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fusor-io/fusor-hub.git"
  },
  "private": false,
  "license": "MIT",
  "homepage": "fusor.io",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.7.2",
    "@nestjs/common": "^7.3.1",
    "@nestjs/config": "^0.4.2",
    "@nestjs/core": "^7.3.1",
    "@nestjs/mongoose": "^6.4.0",
    "@nestjs/platform-express": "^7.3.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "crc-32": "^1.2.0",
    "crypto-random-string": "^3.2.0",
    "date-fns": "^2.21.1",
    "expr-eval": "^2.0.2",
    "firebase-admin": "^8.13.0",
    "googleapis": "^58.0.0",
    "hide-powered-by": "^1.1.0",
    "http-status-codes": "^1.4.0",
    "jsonata": "^1.8.3",
    "moment": "^2.27.0",
    "msgpack-lite": "^0.1.26",
    "mysql2": "^3.14.3",
    "node-cache": "^5.1.2",
    "node-schedule": "^1.3.2",
    "pupa": "^2.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.0",
    "slug": "^4.0.4",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.4.1",
    "@nestjs/schematics": "^7.0.1",
    "@nestjs/testing": "^7.3.1",
    "@types/date-fns": "^2.6.0",
    "@types/expr-eval": "^1.1.0",
    "@types/express": "^4.17.3",
    "@types/jest": "25.1.4",
    "@types/jsonata": "^1.5.1",
    "@types/moment": "^2.13.0",
    "@types/msgpack-lite": "^0.1.7",
    "@types/node": "^13.13.12",
    "@types/node-cache": "^4.2.5",
    "@types/node-schedule": "^1.3.0",
    "@types/pupa": "^2.0.0",
    "@types/slug": "^0.9.1",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^25.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
